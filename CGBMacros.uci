`define CGB_DEBUG 1

`define cgblog(msg, cond, tag) \
    `log(self.class.name $ "::" $ GetFuncName() $ "(): " $ `msg, \
    `cond, \
    `if(`tag) name("CGBMutator-" $ string(`tag)) `else 'CGBMutator' `endif)

`define cgbslog(msg, cond, tag) \
    `log(default.class.name $ "::" $ GetFuncName() $ "(): " $ `msg, \
    `cond, \
    `if(`tag) name("CGBMutator-" $ string(`tag)) `else 'CGBMutator' `endif)

`define cbgwarn(msg, cond) `cgblog(`msg, `cond, 'WARNING')
`define cbgerror(msg, cond) `cgblog(`msg, `cond, 'ERROR')

`define cbgswarn(msg, cond) `cgbslog(`msg, `cond, 'WARNING')
`define cbgserror(msg, cond) `cgbslog(`msg, `cond, 'ERROR')

`if(`isdefined(CGB_DEBUG))
    `define cbgdebug(msg, cond) `cgblog(`msg, `cond, 'DEBUG')
    `define cbgsdebug(msg, cond) `cgbslog(`msg, `cond, 'DEBUG')
`else
    `define cbgdebug(msg, cond, tag)
    `define cbgsdebug(msg, cond, tag)
`endif
